<form id="payment-form" class="main-content" method="POST" action="/protected/payment">
{{!--<form id="payment-form" class="main-content" method="POST" action="/protected/payment"></form>--}}
<h2>{{title}}</h2>

  <h4>Select payment option</h4>
  <label for="cardNumber">Card Number</label>
  <input
    placeholder="Enter your card number"
    id="cardNumber"
    name="cardNumber"
    required
    type="tel"
     pattern="\d*" 
     maxlength="16"
  />

  <label for="cardName">Name</label>
  <input
    placeholder="Enter name on the card"
    id="cardName"
    name="cardName"
    required
  />

  <label for="cardCvv">CVV</label>
  <input
  class="cc-cvc"
   type="password"
    placeholder="Enter 3 digit CVV"
    id="cardCvv"
    name="cardCvv"
    required
  />

  <label for="cardExpiry">Expiry</label>
  <input
  class="cc-expires"
    placeholder="Enter Expiry"
    id="cardExpiry"
    name="cardExpiry"
    required
  />

  <button type="submit">Login</button>

  {{#if error}}
    <p class="error">{{error}}</p>
  {{/if}}

  <a href="/logout">Click here to Logout</a>
  <a href="/logout">Go back to booking - right now goes back to logout</a>

</form>
